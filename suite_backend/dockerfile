FROM python:3.12-slim

# system deps (optional but handy)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# install deps first (leverages Docker layer cache)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt gunicorn

# app code
COPY . .

# Render will set $PORT at runtime; default to 5001 locally
ENV PORT=5001
# allow gunicorn workers to be controlled by env
# (Render → Environment → WEB_CONCURRENCY=1)
ENV WEB_CONCURRENCY=1

EXPOSE 5001

# IMPORTANT: bind to 0.0.0.0:$PORT and respect WEB_CONCURRENCY
# If your module is not app:app, change it (e.g., backend.app:app)
CMD sh -c "gunicorn -b 0.0.0.0:${PORT:-5001} \
  --workers ${WEB_CONCURRENCY:-1} --threads 2 --timeout 60 app:app"
